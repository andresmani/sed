<%- model_class = Tema -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

  <%= form_tag request.path, :method => 'get' do %>
    Datos a Buscar:
    <div class="input-append">
      <%= search_field_tag :search, params[:search], :placeholder => "Nombre" %>
      <%= submit_tag "Consultar", :class => "btn btn-inverse ", :name => nil %>
    </div>
    <p>numero de registros
   <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
    <% end %>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Pograma</th>
      <th>Materia</th>
      <th>Descripcion</th>
      <th><%=t '.acciones', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @temas %>
  </tbody>
</table>

<tfoot>
  <td>
   <%= link_to "Nuevo tema", new_unidad_tema_path, :remote =>true, :class =>'btn btn-success' %>
 </td>

 <td><%= link_to 'Atras', unidades_path,:class =>" btn btn-info" %></td>
</tfoot>

<div class="pagination pagination-centered">
    <ul>
    <%= will_paginate @temas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
    &raquo;' %>
  </ul>
  <br>
    <td>Total temas: <%= @temas.total_entries %> </td>
  </div>