<%- model_class = Tema -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Pograma</th>
      <th>Unidad</th>
      <th>Descripcion</th>
      <th><%=t '.acciones', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @temas %>
  </tbody>
</table>

<tfoot>
  <td>
   <%= link_to "Nuevo tema", new_tema_path, :remote =>true, :class =>'btn btn-success' %>
 </td>
</tfoot>