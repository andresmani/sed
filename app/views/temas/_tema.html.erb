<tr id=<%= "tema_#{tema.id}" %>>

  <td><%= tema.nombre %></td>
  <td><%= tema.unidad.programa.nombre %></td>
  <td><%= tema.unidad.nombre %></td>
  <td><%= tema.descripcion %></td>
  <td>

    <div class="btn-group" >
      <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><i><%= image_tag("config.png")%></i></a>
     <ul class="dropdown-menu">
          <li><%= link_to unidad_tema_path(@unidad, tema), :remote => true, :class => 'btn btn-mini btn-info'  do %>
             <i><%=image_tag("ver.png")%></i>
              <% end %>
          </li>
          <li>
           <%= link_to edit_unidad_tema_path(@unidad, tema), :remote => true, :class => 'btn btn-mini'  do %>
           <i><%=image_tag("edit.png")%></i>
           <% end %>
          </li>
          <li>
             <%= link_to unidad_tema_path(@unidad, tema), :data => { :confirm => 'Esta Seguro?' }, :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger'  do %>
             <i><%=image_tag("del.png")%></i>
             <% end %>
          </li>
      </ul>
    </div> 

    </td>
    <td><%= link_to "Actividades", tema_actividades_path(tema),  :class=>"btn btn-inverse" %>
    </td>
</tr>
