<%- model_class = Estudiante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

<%= form_tag request.path, :method => 'get' do %>
    Datos a Buscar:
    <div class="input-append">
      <%= search_field_tag :search, params[:search], :placeholder => "nombre, Documento, email" %>
      <%= submit_tag "Consultar", :class => "btn btn-inverse ", :name => nil %>
    </div>
    <p>numero de registros
   <p><%= text_field_tag :registro, params[:registro], options={:class=>"span1"} %></p>
    <% end %>
    <br>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
        <th>Nombre </th>
        <th>Apellido </th>
        <th>Email </th>
        <th>Programa</th>
        <th>Ficha </th>
        <th>Acciones </th>
      </tr>
  </thead>
  <tbody> 
      <%= render @estudiantes %>
  </tbody>
</table>
    <tr>
      <td><%= link_to 'Nuevo programa', new_estudiante_path,:class =>" btn btn-info", :remote => true %></td>
    </tr>

    <div class="pagination pagination-centered">
    <ul>
    <%= will_paginate @estudiantes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
    &raquo;' %>
  </ul>
  <br>
    <td>Total estudiantes: <%= @estudiantes.total_entries %> </td>
  </div>