<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "SED" %></title>
    <meta name="description" content="">
    <meta name="Andres Echeverri Arango" content="aprendizage">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>    
    <%= csrf_meta_tags %>
    <link rel="shortcut icon" href="images/edit.png"/>
    <%= yield(:head) %>
  </head>

  <body>
    <% if current_user %>
      <div class ="tabbable navbar-inverse">
        <header class="navbar navbar-fixed-top">
          <nav class="navbar-inner ">
            <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </a>
            <%= link_to image_tag("home.png"), root_path, :class => 'brand' %>
            <div class="nav-collapse">
            <%= render 'layouts/navigation' %>
            </div>
            </div>
          </div>
        </nav>
        <% else %>
        <center>
        <div>
        <p class="muted pull-left"><a  href="#myModal1"  role="button" class="pull-right btn-large btn-inverse" data-toggle="modal" title="Iniciar Sesion">Iniciar</a></p>
        </div>
        </center>   

      <% end %>
    </header>
    <div id="main" role="main">
    <div class="container">
    <div class="content">
    <div class="row">
    <div class="span12">
    <%= render 'layouts/messages' %>
    <br><br><br>    
    <%= yield %>
    </div>
    </div>
    </div>
    </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>