<tr id=<%= "actividad_#{actividad.id}" %>>

  <td><%= actividad.nombre %></td>
  <td><%= actividad.tema.unidad.programa.nombre %></td>
  <td><%= actividad.tema.unidad.nombre %></td>
  <td><%= actividad.tema.nombre %></td>
  <td><%= actividad.descripcion %></td>
  <td>
   <div class="btn-group" >
      <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><i><%= image_tag("config.png")%></i></a>
     <ul class="dropdown-menu">
          <li><%= link_to tema_actividad_path(@tema, actividad), :remote => true, :class => 'btn btn-mini btn-info'  do %>
             <i><%=image_tag("ver.png")%></i>
              <% end %>
          </li>
          <li>
           <%= link_to edit_tema_actividad_path(@tema, actividad), :remote => true, :class => 'btn btn-mini'  do %>
           <i><%=image_tag("edit.png")%></i>
           <% end %>
          </li>
          <li>
             <%= link_to tema_actividad_path(@tema, actividad), :data => { :confirm => 'Esta Seguro?' }, :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger'  do %>
             <i><%=image_tag("del.png")%></i>
             <% end %>
          </li>
      </ul>
    </div>

    </td>
</tr>
